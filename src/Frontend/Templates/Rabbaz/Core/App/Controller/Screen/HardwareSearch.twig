{% extends "Rabbaz/Core/App/Controller/Screen/AbstractAdministration.twig" %}

{% block main %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Search Hardware</h1>
</div>

{% if noEquipment %}
<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading"><i class="far fa-sad-tear"></i> No equipment found!</h4>
    Please start discovering useable equipment around you.
</div>
{% endif %}

{{ VIEW_RABBAZ_CORE_APP_CONTROLLER_VIEW_FOUNDEQUIPMENT }}

<form>
<button type="submit" name="search" value="1" class="btn btn-outline-primary"><i class="fas fa-satellite-dish"></i> Start discover equipment</button>
</form>
{% endblock %}
